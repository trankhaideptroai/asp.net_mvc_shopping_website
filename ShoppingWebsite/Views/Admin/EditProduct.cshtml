@model ShoppingWebsite.Models.Product

<h2>Chỉnh sửa Sản Phẩm</h2>

<form asp-action="EditProduct">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Color"></label>
        <input asp-for="Color" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Size"></label>
        <input asp-for="Size" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <input asp-for="CategoryId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Image"></label> <!-- Trường Image có thể được chỉnh sửa -->
        <input asp-for="Image" class="form-control" />
        <div class="form-group">
         <label asp-for="Description"></label> <!-- Trường Image có thể được chỉnh sửa -->
          <input asp-for="Description" class="form-control" />

    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
