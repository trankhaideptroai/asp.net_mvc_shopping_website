@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Quản lý hệ thống</h1>

<!-- Quản lý khách hàng -->
<h2>Quản lý Khách Hàng</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên đăng nhập</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in ViewBag.Customers)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Username</td>
                <td>@customer.Email</td>
                <td>@customer.Role</td>
                <td>
                    <a asp-action="CreateCustomer" class="btn btn-success">Thêm Khách Hàng</a>
                    <a href="@Url.Action("EditCustomer", "Admin", new { id = customer.Id })" class="btn btn-sm btn-warning">Sửa</a>
                    <a href="@Url.Action("DeleteCustomer", "Admin", new { id = customer.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa khách hàng này?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Quản lý sản phẩm -->
<h2>Quản lý Sản Phẩm</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Màu sắc</th>
            <th>Kích cỡ</th>
            <th>Ảnh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in ViewBag.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Color</td>
                <td>@product.Size</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.Image))
                    {
                        <img src="@product.Image" alt="Sản phẩm" style="width:100px; height:100px;" />
                    }
                </td>
                <td>
                    <a asp-action="CreateProduct" class="btn btn-success">Thêm Sản Phẩm</a>
                    <a href="@Url.Action("EditProduct", "Admin", new { id = product.Id })" class="btn btn-sm btn-warning">Sửa</a>
                    <a href="@Url.Action("DeleteProduct", "Admin", new { id = product.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

